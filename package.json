{
  "name": "jaip-backend",
  "packageManager": "yarn@4.6.0",
  "scripts": {
    "build": "tsc",
    "dev": "LOG_LEVEL=info nodemon  --inspect src/server.ts",
    "test": "LOG_LEVEL=error jest src --maxWorkers=50%",
    "test:ci": "LOG_LEVEL=error jest src --runInBand",
    "postinstall": "husky",
    "pre-commit": "lint-staged",
    "lint:ci": "eslint src",
    "lint": "yarn lint:ci --fix",
    "format:ci": "prettier --check **/*.{js,ts,json}",
    "format": "yarn format:ci --write"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/postgres": "^6.0.2",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.1",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "fastify-plugin": "^5.0.1",
    "pg": "^8.13.1",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.26.7",
    "@babel/preset-env": "^7.26.7",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/js": "^9.18.0",
    "@jest/types": "^29.6.3",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.6",
    "@types/pg": "^8.11.11",
    "babel-jest": "^29.7.0",
    "eslint": "^9.18.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.3.0",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write"
    ]
  }
}