{
  "name": "jaip-backend",
  "packageManager": "yarn@4.9.1",
  "scripts": {
    "build": "tsc",
    "dev": "LOG_LEVEL=info nodemon  --inspect src/server.ts",
    "test": "LOG_LEVEL=error jest src/ --maxWorkers=50%",
    "test:ci": "LOG_LEVEL=error jest src/ --runInBand",
    "postinstall": "husky && prisma generate",
    "pre-commit": "lint-staged",
    "type-check": "tsc --noEmit",
    "lint:ci": "eslint src",
    "lint": "yarn lint:ci --fix",
    "format:ci": "prettier --check ./src",
    "format": "yarn format:ci --write"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.798.0",
    "@aws-sdk/s3-request-presigner": "^3.798.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/postgres": "^6.0.2",
    "@fastify/swagger": "^9.5.0",
    "@fastify/swagger-ui": "^5.2.2",
    "@prisma/client": "^6.7.0",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.2",
    "fastify-plugin": "^5.0.1",
    "pg": "^8.15.6",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-typescript": "^7.27.0",
    "@eslint/js": "^9.25.1",
    "@jest/types": "^29.6.3",
    "@types/babel__core": "^7.20.5",
    "@types/babel__preset-env": "^7.10.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "@types/pg": "^8.11.14",
    "@types/uuid": "^10.0.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.25.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.1",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "prisma": "^6.7.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  },
  "lint-staged": {
    "src": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}